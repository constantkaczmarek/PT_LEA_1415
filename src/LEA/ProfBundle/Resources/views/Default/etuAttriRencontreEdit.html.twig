{% extends "::base.html.twig" %}
{% block top %}
    {{ parent() }}
    {% include "::navbar.html.twig" %}
{% endblock %}
{% block body %}
    <form action="{{ path("lea_prof_etuRencontreEdit",{ 'name': name}) }}" method="post">
        <table align='center' style='border-width: 0px;border-style:solid;font-size:11px' width='95%'>
            <tr class="entete">
                <td>
                    {{ infos.et_pn }}
                </td>
            </tr>
            {{ form_start(form) }}
            <tr>
                <td style='border-width: 1px;border-style:solid' width='95%'>
                    <b>Date rencontre (jj-mm-aaaa) :</b> {{ form_row(form.dateRencontre) }}<br/>
                    <b>Service/Projet : </b>{{ form_row(form.service) }} <br/>
                    <b>(éventuellement client) :</b> {{ form_row(form.client) }}
                </td>
            </tr>
            <tr>
                <td>
                    <div style='border-width: 1px;border-style:solid' width='95%'>
                        <b>Quels sont (ou seront) les missions confiées ?</b><br/>
                        <div style='width:95%'>
                            {{ form_row(form.missions,{ 'attr': {'cols': '70','rows':'5'}} ) }}
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div style='border-width: 1px;border-style:solid' width='95%'>
                        <b>Dans quel environnement technique ?</b><br/>
                        <div style='width:95%'>
                            {{ form_row(form.environnementTechnique,{ 'attr': {'cols': '70','rows':'5'}} ) }}
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div style='border-width: 1px;border-style:solid' width='95%'>
                        <b>Comment se passe l'intégration dans l'entreprise ?</b><br/>
                        <div style='width:95%'>
                            {{ form_row(form.integrationEntreprise,{ 'attr': {'cols': '70','rows':'5'}} ) }}
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div style='border-width: 1px;border-style:solid' width='95%'>
                        <b>Mots clés ?</b><br/>
                        <div style='width:95%'>
                            {{ form_row(form.motscles,{ 'attr': {'cols': '70','rows':'1'}} ) }}
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div style='border-width: 1px;border-style:solid' width='95%'>
                        <b>Validation du tuteur</b> {{ form_row(form.signatureTuteur) }}(remarques éventuelles)<br/>
                        <div style='width:95%'>
                            {{ form_row(form.remarquesTuteur,{ 'attr': {'cols': '70','rows':'5'}} ) }}
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <a href="{{ path("lea_prof_etuRencontre",{ 'name': name}) }}"><button class="button">Retour</button></a>
                    <input type="submit" name="Enregistrer" value="Enregistrer"/>
                </td>
            </tr>
        </table>
        {{ form_end(form) }}
    </form>
{% endblock %}